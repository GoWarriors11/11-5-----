.content {
  position: relative;
  margin-top: 20rpx;
  padding: 0rpx 20rpx;
  background-color: #FFFFFF; }
  .content .homeNewest {
    width: 100rpx;
    height: 48rpx;
    margin-left: -20rpx; }
  .content .flag_begintime {
    position: absolute;
    top: 5rpx;
    left: 8rpx;
    font-size: 25rpx;
    line-height: 48rpx; }
  .content .user {
    margin-top: 30rpx; }
    .content .user .userImg {
      width: 80rpx;
      height: 80rpx;
      border-radius: 50%; }
    .content .user .theme {
      margin-left: 30rpx;
      padding: 20rpx;
      background-color: #f5f5f5; }
      .content .user .theme .theme-one {
        color: #999999;
        font-size: 24rpx; }
      .content .user .theme .theme-two {
        margin-top: 20rpx;
        color: #333333;
        font-size: 32rpx;
        font-weight: bold; }
  .content .content-line {
    margin: 30rpx 0rpx;
    font-size: 28rpx; }
    .content .content-line .title {
      margin-left: 20rpx; }
    .content .content-line .detail {
      color: #999999;
      font-size: 24rpx;
      margin: 20rpx 0rpx 0rpx 60rpx; }
  .content .lineation {
    margin: 30rpx 0rpx;
    border-bottom: 1px solid #E0E0E0; }
  .content .join_people {
    display: flex;
    margin: 40rpx 0rpx;
    flex-wrap: wrap; }
    .content .join_people .join_user {
      width: 33.3%;
      margin-bottom: 30rpx;
      justify-content: center; }
    .content .join_people .left {
      margin-right: 10rpx;
      position: relative;
      display: flex;
      flex-direction: column;
      align-items: center; }
