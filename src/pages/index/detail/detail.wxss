page {
  background-color: #FFFFFF; }

.container {
  background-color: #FFFFFF;
  padding: 30rpx;
  padding-bottom: 180rpx; }
  .container .user {
    padding-bottom: 20rpx; }
    .container .user .userImg {
      width: 80rpx;
      height: 80rpx;
      border-radius: 50%; }
    .container .user .theme {
      margin-left: 30rpx;
      padding: 20rpx;
      background-color: #f5f5f5; }
      .container .user .theme .theme-one {
        color: #999999;
        font-size: 24rpx; }
      .container .user .theme .theme-two {
        margin-top: 20rpx;
        color: #333333;
        font-size: 32rpx;
        font-weight: bold; }
  .container .content-line {
    margin: 10rpx 0rpx;
    font-size: 28rpx; }
    .container .content-line .title {
      margin-left: 20rpx; }
    .container .content-line .detail {
      color: #999999;
      font-size: 24rpx;
      margin: 20rpx 0rpx 0rpx 60rpx; }
  .container .showmore {
    padding: 20rpx 0; }
    .container .showmore .left {
      padding-right: 20rpx; }
      .container .showmore .left .join {
        letter-spacing: 4rpx;
        font-size: 20rpx;
        padding: 10rpx;
        writing-mode: vertical-lr;
        color: white;
        border-radius: 48rpx; }
    .container .showmore .list {
      display: flex;
      flex-wrap: wrap;
      padding-left: 10rpx; }
      .container .showmore .list .list_1 {
        width: 33.3%;
        padding-bottom: 20rpx; }
        .container .showmore .list .list_1 .userImg {
          width: 65rpx;
          height: 65rpx;
          margin-right: 10rpx;
          border-radius: 50%; }
        .container .showmore .list .list_1 .right {
          display: flex;
          flex-direction: column;
          justify-content: center;
          line-height: 28rpx; }
          .container .showmore .list .list_1 .right .name {
            font-size: 20rpx; }
          .container .showmore .list .list_1 .right .date {
            font-size: 17rpx;
            color: #999999; }
  .container .bottom {
    background-color: #FFFFFF;
    padding: 30rpx 0; }
    .container .bottom .remain_num {
      color: #999999;
      padding-left: 20rpx; }
    .container .bottom .btn {
      margin: 0 10rpx; }
      .container .bottom .btn .is_join {
        margin-right: 40rpx; }
      .container .bottom .btn button {
        height: 88rpx;
        width: 320rpx;
        font-size: 32rpx;
        line-height: 88rpx; }
      .container .bottom .btn .modal-mask {
        width: 100%;
        height: 100%;
        position: fixed;
        top: 0;
        left: 0;
        background: #000;
        opacity: 0.5;
        overflow: hidden;
        z-index: 9000;
        color: #fff; }
      .container .bottom .btn .modal-dialog {
        width: 600rpx;
        overflow: hidden;
        position: fixed;
        top: 40%;
        left: 0;
        z-index: 9999;
        background: white;
        margin: -280rpx 75rpx;
        border-radius: 30rpx; }
      .container .bottom .btn .modal-content .title {
        font-size: 34rpx;
        font-weight: bold;
        padding: 50rpx;
        border-bottom: 0.5rpx solid #E0E0E0;
        text-align: center;
        color: black; }
      .container .bottom .btn .modal-content .option {
        padding: 35rpx 0rpx;
        border-bottom: 0.5rpx solid whitesmoke;
        text-align: center;
        color: black; }
        .container .bottom .btn .modal-content .option .explain {
          font-size: 24rpx;
          color: #999999; }
      .container .bottom .btn .modal-footer {
        height: 100rpx;
        font-size: 32rpx;
        line-height: 95rpx; }
        .container .bottom .btn .modal-footer .btn-cancel {
          width: 100%;
          height: 100rpx;
          color: #1cad1a;
          text-align: center; }
