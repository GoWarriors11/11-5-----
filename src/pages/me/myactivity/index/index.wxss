page {
  display: flex;
  flex-direction: column;
  height: 100%; }

.navbar {
  flex: none;
  display: flex;
  background: #fff; }

.navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx; }

.navbar .item.active {
  color: #1dab1a; }

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  width: 130rpx;
  margin-left: 60rpx;
  text-align: center;
  background: #1dab1a; }

.content {
  margin: 30rpx 0;
  padding: 30rpx;
  background-color: #fff; }
  .content .top {
    position: relative;
    padding-bottom: 30rpx;
    border-bottom: 1rpx solid #e0e0e0; }
    .content .top .title {
      align-items: center;
      padding-bottom: 20rpx; }
      .content .top .title .icon {
        width: 48rpx;
        height: 48rpx;
        margin-right: 30rpx; }
      .content .top .title .theme {
        font-weight: bold;
        font-size: 34rpx; }
      .content .top .title .detail {
        position: absolute;
        right: 30rpx; }
    .content .top .content-line {
      padding: 15rpx 0;
      align-items: center; }
      .content .top .content-line .icon {
        width: 48rpx;
        height: 48rpx;
        margin-right: 30rpx; }
  .content .bottom {
    margin: 10rpx 0;
    text-align: center; }
    .content .bottom .num {
      padding: 20rpx 0;
      font-size: 26rpx;
      color: #999999; }
    .content .bottom .publish_time {
      padding-top: 10rpx;
      font-size: 24rpx;
      color: #999999; }

.noDataPage {
  text-align: center;
  margin-top: 150rpx; }
  .noDataPage .icon {
    width: 500rpx;
    height: 500rpx; }
  .noDataPage .text {
    color: #999999;
    margin-top: 40rpx; }
  .noDataPage .btn {
    margin: 40rpx 220rpx;
    width: 300rpx;
    height: 50rpx;
    color: #fff;
    background-color: #1cad1a; }
